<Window x:Class="TowerSearch.CheckPartAmount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerSearch"
        mc:Ignorable="d"
        Title="Check The Amount of Parts Needed" Height="160.112" Width="300" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid Background="#FFBBB5B5">
        <Slider x:Name="slider1" Margin="10,58,10,50" Minimum="5" Maximum="200" SmallChange="1" Value="4" ToolTip="Slide to set threshold" ValueChanged="slider_ValueChanged"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="63,10,0,0" TextWrapping="Wrap" Text="Threshold:" VerticalAlignment="Top" Width="64" Background="{x:Null}"/>
        <TextBox x:Name="ThresholdAmountLabel" HorizontalAlignment="Left" Height="23" Margin="143,10,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="51" Background="{x:Null}" FontWeight="Bold"/>
        <Button x:Name="button" Content="Generate List" Margin="100,90,100,0" VerticalAlignment="Top" Click="button_Click"/>

    </Grid>
</Window>
