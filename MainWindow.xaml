<Window x:Class="TowerSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search The Towers" Height="252" Width="304"
        ResizeMode="NoResize">
    <Grid Background="#FFBBB5B5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Search" Grid.Row="4" Width="108" Height="76" FontSize="20" Click="Button_Click"/>
        <Button x:Name="ViewLog" Content="View Log" Grid.Row="5" FontSize="20" Click="Button_Click_1" Height="75" Width="108"/>
        <Button Content="Borrow" Grid.Column="1" Grid.Row="4" FontSize="20" Click="Button_Click_2" Height="76" Width="108"/>
        <Button Content="Return" Grid.Column="1" Grid.Row="5" FontSize="20" Click="Button_Click_3" Height="75" Width="108"/>

    </Grid>
</Window>
