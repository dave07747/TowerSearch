<Window x:Class="TowerSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search The Towers" Height="592" Width="425">
    <Grid Background="#FFBBB5B5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Part Name" VerticalAlignment="Center" FontSize="17" Grid.ColumnSpan="2" Height="34" Width="92" Margin="0,0,0,30"/>
        <TextBox TextAlignment="Center" x:Name="partName" Height="33" TextWrapping="Wrap" VerticalAlignment="Center" Margin="100,44,100,17" ToolTip="Leave blank if unknown" FontSize="20"  Background="#FFCFCFCF" Grid.ColumnSpan="2" SelectionBrush="#FFAA14FF"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Tower #" VerticalAlignment="Center" FontSize="17" Margin="50,10,0,60"/>
        <TextBox x:Name="towerNumber" TextAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" ToolTip="Leave blank if unkown" FontSize="20" CaretBrush="Black" Background="#FFCFCFCF" SelectionBrush="#FFAA14FF" Height="40" Margin="100,38,50,15"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Row (X)" VerticalAlignment="Center" FontSize="17" Height="34" Width="60" Margin="60,0,0,30"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" Text="Column (Y)" VerticalAlignment="Center" FontSize="17" Margin="0,0,60,40"/>
        <TextBox TextAlignment="Center" x:Name="rowX" Margin="100,44,50,10" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Background="#FFCFCFCF" ToolTip="Leave blank if unkown" FontSize="20" SelectionBrush="#FFAA14FF" Height="40"/>
        <TextBox TextAlignment="Center" x:Name="columnY" Grid.Column="1" Margin="50,49,100,10" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" SelectionBrush="#FFAA14FF" Background="#FFCFCFCF" ToolTip="Leave blank if unkown" FontSize="20" Height="35"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="17" Height="34" Width="80" Margin="10,0,0,30"><Run Text="Quantity"/></TextBlock>
        <TextBlock x:Name="Quantity" Grid.ColumnSpan="2" TextAlignment="Center" Grid.Row="3" TextWrapping="Wrap" Text="N/A" VerticalAlignment="Center" FontSize="20" Margin="100,47,100,10" ToolTip="Nothing goes here!" Background="#FFCFCFCF" Height="37"/>
        <Button x:Name="button" Content="Submit" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30" FontSize="20" Click="Button_Click"/>
        <Button x:Name="ViewLog" Content="View Log" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" FontSize="20" Click="Button_Click_1"/>
        <Button Content="Borrow" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Click="Button_Click_2"/>
        <Button Content="Return" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" FontSize="20"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Side #" VerticalAlignment="Center" Margin="0,0,50,40" FontSize="17"/>
        <TextBox TextAlignment="Center" x:Name="sideNumber" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Background="#FFCFCFCF" SelectionBrush="#FF7B13F7" FontSize="20" Margin="50,38,100,15" Height="40" Width="63"/>

    </Grid>
</Window>
