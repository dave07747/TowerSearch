<Window x:Class="TowerSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search The Towers" Height="267" Width="324">
    <Grid Background="#FFBBB5B5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="button" Content="Search" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="30" FontSize="20" Click="Button_Click"/>
        <Button x:Name="ViewLog" Content="View Log" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" FontSize="20" Click="Button_Click_1"/>
        <Button Content="Borrow" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="20" Click="Button_Click_2"/>
        <Button Content="Return" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" FontSize="20" Click="Button_Click_3"/>

    </Grid>
</Window>
