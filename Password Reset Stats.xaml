<Window x:Class="TowerSearch.Password_Reset_Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Enter Password" Height="117.714" Width="278" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Icon="logo.ico">
    <Grid Background="#FF29A62E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>

        <PasswordBox x:Name="PassWord" Grid.ColumnSpan="2" Margin="20,15,150,0" PasswordChar="6" Background="#FF1A3E1B" Foreground="#DDFFFFFF" BorderThickness="0" VerticalAlignment="Center"/>
        <Button Grid.ColumnSpan="2" Content="Submit" HorizontalAlignment="Left" Margin="166,30,0,0" VerticalAlignment="Top" Background="#FF1A3E1B" Width="96" Click="Button_Click" FontSize="18.667"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="6,13,0,0" TextWrapping="Wrap" Text="Reset Parts Statistics?" VerticalAlignment="Top" Width="152" TextAlignment="Center" Foreground="#DDFFFFFF" FontSize="16"/>

    </Grid>
</Window>
