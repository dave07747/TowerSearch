<Window x:Class="TowerSearch.Password_Reset_Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please Enter Password" Height="136" Width="278" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid Background="#FFBBB5B5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>

        <PasswordBox x:Name="PassWord" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,40,60,0" VerticalAlignment="Center" Width="125" Height="25" PasswordChar="6" Background="#FFCFCFCF"/>
        <Button Grid.ColumnSpan="2" Content="Submit" HorizontalAlignment="Left" Margin="197,46,0,0" VerticalAlignment="Top" Background="#FFCFCFCF" Width="60" Click="Button_Click"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="44,33,0,0" TextWrapping="Wrap" Text="Reset Parts Statistics?" VerticalAlignment="Top" Width="116" TextAlignment="Center"/>

    </Grid>
</Window>
