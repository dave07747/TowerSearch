<Window x:Class="TowerSearch.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" Height="136" Width="278" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid Background="#FFBBB5B5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Please enter password" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="40,16,97,62" Height="29" Width="135"/>
        <PasswordBox x:Name="PassWord" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="135" Height="25" PasswordChar="6" Background="#FFCFCFCF" Margin="0,10,55,0"/>
        <Button Grid.ColumnSpan="2" Content="Submit" HorizontalAlignment="Left" Margin="202,34,0,0" VerticalAlignment="Top" Background="#FFCFCFCF" Width="60" Click="Button_Click" RenderTransformOrigin="0.467,-0.55"/>
        <Button Grid.ColumnSpan="2" Content="Change Password" HorizontalAlignment="Left" Margin="155,75,0,0" VerticalAlignment="Top" Width="107" Background="{x:Null}" Foreground="#FF1082E2" RenderTransformOrigin="0.44,0.9" Height="27" BorderBrush="{x:Null}" Click="Button_Click_1"/>

    </Grid>
</Window>
